<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.example.bigtable.opentsdb</groupId>
	<artifactId>opentsdb-examples</artifactId>

	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>cloud-bigtable-opentsd</name>
	<url>http://maven.apache.org</url>

	<parent>
		<groupId>com.google.cloud</groupId>
		<artifactId>bigtable-samples</artifactId>
		<version>1.0.0</version>
		<relativePath>..</relativePath>
	</parent>

	<properties>
		<bigtable.version>1.0.0-pre3</bigtable.version>
		<opentsdb.version>2.4.0RC1</opentsdb.version>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.compiler.source>1.8</maven.compiler.source>
	</properties>

	<repositories>
		<repository>
			<id>snapshots-repo</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>com.google.cloud.bigtable</groupId>
			<artifactId>bigtable-hbase-1.x-hadoop</artifactId>
			<version>1.0.0-pre3</version>
			<exclusions>
				<exclusion>
					<groupId>com.google.guava</groupId>
					<artifactId>guava</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.beam</groupId>
			<artifactId>beam-runners-google-cloud-dataflow-java</artifactId>
			<version>2.1.0</version>
			<exclusions>
				<exclusion>
					<groupId>com.google.cloud.bigtable</groupId>
					<artifactId>bigtable-client-core</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.google.cloud.bigtable</groupId>
					<artifactId>bigtable-protos</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.beam</groupId>
			<artifactId>beam-runners-direct-java</artifactId>
			<version>2.1.0</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.opentsdb</groupId>
			<artifactId>opentsdb</artifactId>
			<version>${opentsdb.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.hbase</groupId>
					<artifactId>asynchbase</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.google.guava</groupId>
					<artifactId>guava</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.pythian.opentsdb</groupId>
			<artifactId>asyncbigtable</artifactId>
			<version>0.3.0</version>
			<exclusions>
				<exclusion>
					<groupId>com.google.cloud.bigtable</groupId>
					<artifactId>bigtable-hbase-1.2</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.google.guava</groupId>
					<artifactId>guava</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>
